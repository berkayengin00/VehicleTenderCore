@model RetailCustomerRegisterVM

<div class="container">


	<form asp-action="Register" asp-controller="RetailCustomer" method="post">

		@Html.AntiForgeryToken()
		<fieldset class="row">


			<div class="form-group col-md-6">
				<label asp-for="FirstName" class="col-md-4 control-label"></label>
				<div class="inputGroupContainer">
					<div class="input-group">
						<span class="input-group-text" id="basic-addon1"><i class="fa fa-user"></i></span>
						<input asp-for="FirstName" type="text" placeholder="adınızı giriniz" class="form-control" required="true" />
						</div>
				</div>
			</div>

			<!-- Text input-->

			<div class="form-group col-md-6">
				<label asp-for="LastName" class="col-md-4 control-label"></label>
				<div class="inputGroupContainer">
					<div class="input-group">
						<span class="input-group-text" id="basic-addon1"><i class="fa fa-user"></i></span>
						<input asp-for="LastName" type="text" placeholder="soyadınızı giriniz" class="form-control" required="true" />
					</div>
				</div>
			</div>

			<!-- Text input-->
			<div class="form-group col-md-6">
				<label asp-for="Email" class="col-md-4 control-label"></label>
				<div class="inputGroupContainer">
					<div class="input-group">
						<span class="input-group-text" id="basic-addon1"><i class="fa fa-user"></i></span>
						<input asp-for="Email" type="email" placeholder="email giriniz" class="form-control" required="true" />
					</div>
				</div>
			</div>


			<!-- Text input-->

			<div class="form-group col-md-6">
				<label asp-for="PhoneNumber" class="col-md-4 control-label"></label>
				<div class="inputGroupContainer">
					<div class="input-group">
						<span class="input-group-text" id="basic-addon1"><i class="fa fa-user"></i></span>
						<input asp-for="PhoneNumber" type="text" placeholder="telefon giriniz" class="form-control" required="true" />
					</div>
				</div>
			</div>

			<div class="form-group col-md-6">
				<label asp-for="PasswordHash" class="col-md-4 control-label"></label>
				<div class="inputGroupContainer">
					<div class="input-group">
						<span class="input-group-text" id="basic-addon1"><i class="fa fa-user"></i></span>
						<input asp-for="PasswordHash" type="password" placeholder="parola giriniz" class="form-control" required="true" />
					</div>
				</div>
			</div>

			<div class="form-group col-md-6">
				<label asp-for="PasswordHashAgain" class="col-md-4 control-label"></label>
				<div class="inputGroupContainer">
					<div class="input-group">
						<span class="input-group-text" id="basic-addon1"><i class="fa fa-user"></i></span>
						<input asp-for="PasswordHashAgain" type="password" placeholder="parola giriniz" class="form-control" required="true" />
					</div>
				</div>
			</div>



		</fieldset>

		<div class="form-group row text-end">
			<div class="">
				<input type="submit" name="name" value="Kaydet" class="btn btn-outline-success col-md-4" id="kaydet" />
			</div>

		</div>
	</form>
</div>
