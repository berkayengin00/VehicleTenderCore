@model VehicleTenderCore.Entities.View.Tender.TenderAddVM

@{
	Layout = "_Layout";
}

<form asp-action="Add" asp-controller="Tender" method="post">

	@Html.AntiForgeryToken()
	<fieldset class="row">

		<div class="form-group col-md-6">
			<label asp-for="TenderName" class="col-md-4 control-label"></label>
			<div class="inputGroupContainer">
				<div class="input-group">
					<input asp-for="TenderName" type="text" class="form-control" placeholder="İhale Adı" required="true" />
				</div>
			</div>
		</div>

		<div class="form-group col-md-6">
			<label asp-for="StartDateTime" class="col-md-5 control-label"></label>
			<div class="inputGroupContainer">
				<div class="input-group">
					<input asp-for="StartDateTime" type="datetime-local" class="form-control" placeholder="İhale Adı" required="true" />
				</div>
			</div>
		</div>

		<div class="form-group col-md-6">
			<label asp-for="EndDateTime" class="col-md-4 control-label"></label>
			<div class="inputGroupContainer">
				<div class="input-group">
					<input asp-for="EndDateTime" type="datetime-local" class="form-control" placeholder="İhale Adı" required="true" />
				</div>
			</div>
		</div>

		<div class="d-flex justify-content-end col-md-12">
			<input type="submit" name="name" value="Kaydet ve Devam Et" class="btn btn-outline-success col-md-3" id="kaydet" />
		</div>
	</fieldset>
</form>
